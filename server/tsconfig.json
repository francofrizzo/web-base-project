{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "../dist/server",
    "strict": true,
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "configFile": "./tslint.json"
      }
    ],
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ]
}
